<%- contentFor('HeaderCss') %>
  <%- contentFor('breadcrumb') %>

    <div class="row">
      <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
          <h4 class="mb-sm-0">Add User</h4>

          <div class="page-title-right">
            <ol class="breadcrumb m-0">
              <li class="breadcrumb-item">
                <a href="/admin/fruits">add fruits</a>
              </li>
              <li class="breadcrumb-item active">add Fruits</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <%- contentFor('body') %>

      <div class="row">
        <div class="col-xl-12">
          <div class="card">
            <div class="card-body">

              <form class="needs-validation" action="/admin/fruits" method="post">
                <div class="row">

                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom01" class="form-label">id</label>
                      <input type="number" class="form-control" id="validationCustom01" placeholder="Enter id"
                        value="" name="id" required />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom02" class="form-label">fruit Name</label>
                      <input type="text" class="form-control" id="validationCustom02" placeholder=" Enter fruit Name"
                        value="" name="name" required />
                      <div class="valid-feedback">Looks good!</div>
                    </div>

                  </div>
                </div>
                <!-- satra  -->

                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom01" class="form-label">price</label>
                      <input type="number" class="form-control" id="validationCustom01" placeholder="price"
                        value="" name="price" required />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom02" class="form-label">discount</label>
                      <input type="number" class="form-control" id="validationCustom02" placeholder="discount"
                        value="" name="discount" required />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>

<!-- end  -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom01" class="form-label">detail</label>
                      <input type="text" class="form-control" id="validationCustom01" placeholder=" Enter Your detail"
                        value="" name="detail" required />
                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="validationCustom02" class="form-label">image</label>
                      <input type="text" class="form-control" id="validationCustom02"
                        placeholder="image" value="" name="image" required />

                      <div class="valid-feedback">Looks good!</div>
                    </div>
                  </div>
                </div>
               
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required />
                  <label class="form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                  </label>
                  <div class="invalid-feedback">
                    You must agree before submitting.
                  </div>
                </div>
                <div>
                  <button class="btn btn-primary" type="submit">ADD</button>
                </div>
              </form>
            </div>
          </div>
          <!-- end card -->
        </div>

        <%- contentFor('FooterJs') %>

          <script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>

          <script src="/public/assets/js/pages/form-validation.init.js"></script>

          <%- contentFor('BottomJs') %>
      </div>